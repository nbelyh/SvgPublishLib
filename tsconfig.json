{
  "compilerOptions": {
    "target": "ES2015",
    "forceConsistentCasingInFileNames": true,
    "module": "ES2015",
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": false,
    "strictNullChecks": false,
    "noUnusedLocals": false,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "typeRoots": [
      "./node_modules/@types",
    ],
    "lib": [
      "dom",
      "ES2015"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx", 
    "index.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
